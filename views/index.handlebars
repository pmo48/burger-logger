{{!-- Index file to provide layout and interact with controller file to manipulate various data elements --}}

<br>
<br>
<div class="row">
    <div class="col-sm-4 text-center">
        <div class="">
            <iframe src="https://giphy.com/embed/dUkxs9arA5ZIb0niDW" width="480" height="270" frameBorder="0" class="giphy-embed" allowFullScreen></iframe>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading" id="leftside"><strong>Da-burgers ya've added</strong>
                <p>Click-da-button to binge-da-burger</p>
            </div>
            <div class="panel-body">
                <ul>
                    {{#each burgers}}
                    {{#unless devoured}}
                    <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                    <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}"
                        data-newDevoured="{{devour}}">Binge</span></button>
                    <hr>
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
    <br>
    <div class="col-sm-4">
        <div class="jumbotron text-center col-mid-6">
        <h1>Eat-Da-Burger! </h1>
        <iframe src="https://giphy.com/embed/RKsR28Jzn7sqI" width="480" height="480" frameBorder="0" class="giphy-embed" allowFullScreen></iframe>
        <br>
        <panel>
            <form class="create-form">
                <div class="form-group">
                      <div class="mb-3">
                        <label for="exampleFormControlTextarea1" class="form-label">Enter Da-Burger</label>
                        <input type="text" id="newburger" name="name">
                      </div>
                    <button type="submit" class="btn btn-success" id="addburger">
                        Add Da-Burger!
                    </button>
                </div>
            </form>
        </panel>
      </div>
    </div>
    <div class="col-sm-4 text-center">
        <div>
            <iframe src="https://giphy.com/embed/HQ2Slp9yEkX72" width="480" height="204" frameBorder="0" class="giphy-embed" allowFullScreen></iframe>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading" id="rightside" class="fs-1"><strong>Da-burgers ya've eaten</strong>
                <p>Click-da-button to purge-da-burgers</p>
            </div>
            <div class="panel-body">
                <ul>
                    {{#each burgers}}
                    {{#if devoured}}
                    <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                    <button type="button" class="deleteburger btn btn-danger" id="trashbutton" data-id="{{this.id}}"
                        data-newDevoured="{{devour}}">Purge</button>
                    <hr>
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>



	

